<html>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <br><br><br>
          <%= form_tag url_for(action: 'create'), method: "post" do %>
          <h1 class="h3 mb-3 font-weight-normal text-center">New Event<%#= current_user.id%><%#= @user_id%></h1>



          <div class="form-group">
            <%= label_tag 'Titre' %>
            <%= text_field_tag 'title', nil, {class: 'form-control'} %>
          </div>
          <div class="form-group">
            <%= label_tag 'Description' %>
            <%= text_area_tag 'description', nil, {class: 'form-control'} %>
          </div>
            <br />
          <div class="form-group">
            <%= label_tag 'Localisation' %>
            <%= text_field_tag 'location', nil, {class: 'form-control'} %>
          </div>
            <br />
          <div class="form-group">
            <%= label_tag 'Prix' %>
            <%= number_field_tag 'price', nil, {class: 'form-control'} %>
          </div>
            <br />
          <div class="form-group">
            <%= label_tag 'Date' %>
            <%= date_field_tag 'start_date', nil, {class: 'form-control'} %>
          </div>
            <br />
          <div class="form-group">
            <%= label_tag 'DurÃ©e' %>
            <%= number_field_tag 'duration', nil, {class: 'form-control', step: 5} %>
          </div>
            <br />
          <div class="actions mt-5">
            <%= submit_tag "Create Event", {class:'btn btn-primary'} %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </body>
</html>
